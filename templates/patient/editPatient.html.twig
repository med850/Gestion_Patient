              </div>
              <!-- /.card-header -->
              <!-- form start -->
            
                <div class="card-body">
                  <div class="form-group">
                    <label >Nom</label><br>
                      {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                    {{ form_widget(form.nomP,{'attr':{'class': 'form-control'}}) }}
                    <div class="my-custom-class-for-errors">
                    {{ form_errors(form.nomP) }}
                  </div>
                  </div>
                   <div class="form-group">
                    <label >Prenom</label><br>
                      {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                    {{ form_widget(form.prenomP,{'attr':{'class': 'form-control'}}) }}
                    <div class="my-custom-class-for-errors">
                    {{ form_errors(form.prenomP) }}
                  </div>
                  </div>
                  <div class="form-group">
                    <label >Téléphone</label><br>
                      {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}
                    {{ form_widget(form.numTel,{'attr':{'class': 'form-control'}}) }}
                    <div class="my-custom-class-for-errors">
                    {{ form_errors(form.numTel) }}
                  </div>
                  </div>


                    
                <!-- /.card-body -->

               {{form_end(form) }}
